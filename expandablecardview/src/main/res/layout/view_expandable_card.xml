<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="64dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/card_margin_vertical"
    android:foreground="?attr/selectableItemBackground">

    <TextView
        android:id="@+id/tv_card_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/img_card_expand"
        android:layout_toStartOf="@id/img_card_expand"
        android:textColor="@android:color/black"
        android:textSize="19sp"
        android:textStyle="bold"
        tools:text="Title" />

    <ImageView
        android:id="@+id/img_card_expand"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_vertical|end"
        app:srcCompat="@drawable/ic_expand_black"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/tv_card_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_card_title"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/card_margin_vertical"
        android:layout_marginBottom="@dimen/card_margin_vertical"
        android:textSize="16sp"
        android:visibility="gone"
        tools:text="Card Description"
        tools:visibility="visible" />

    <Button
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:id="@+id/btn_card_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_card_desc"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:visibility="gone"
        tools:text="Action"
        tools:visibility="visible" />

</RelativeLayout>
